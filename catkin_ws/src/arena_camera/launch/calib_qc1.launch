<?xml version="1.0"?>
<launch>
    <arg name="respawn" default="false" />
    <arg name="debug" default="false" />
    <arg name="arena_node_name" default="arena_cam_qc1" />
    <arg name="config_file" default="$(find arena_camera)/config/arena_TRI050QC_1.yaml" />

    <arg unless="$(arg debug)" name="launch_prefix" value="" />
    <arg     if="$(arg debug)" name="launch_prefix" value="gdb -ex run --args" />

    <node name="$(arg arena_node_name)" pkg="arena_camera" type="arena_camera_node" output="screen"
          respawn="$(arg respawn)" launch-prefix="$(arg launch_prefix)">
        <rosparam command="load" file="$(arg config_file)" />
    </node>

    <node name="camera_calibration" pkg="camera_calibration" type="cameracalibrator.py" 
          output="screen" respawn="false">
        <remap from="image" to="/$(arg arena_node_name)/image_raw" />
        <remap from="camera" to="/$(arg arena_node_name)" />
        <param name="size" value="13x9" />
        <param name="square" value="0.0205" />
    </node>
</launch>